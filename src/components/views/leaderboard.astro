---
import Tabs from '../generic/tabs.astro';
import LeaderboardScores from '../generic/leaderboard-scores.astro';

const tabList = [
        { name: 'Your scores', id: 'yourScoresPanel'},
        { name: 'Global', id: 'globalScoresPanel' }
    ];
---

<section class="hide generic-view" data-leaderboard-view>
    <button class="generic-view__close -js-close" data-target-view="leaderboard" aria-label="close leaderboard">
        <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" style="enable-background:new 0 0 30.4 30.4" viewBox="0 0 30.4 30.4"><path d="M30.4 2.1 28.3 0 15.2 13.1 2.1 0 0 2.1l13.1 13.1L0 28.3l2.1 2.1 13.1-13.1 13.1 13.1 2.1-2.1-13.1-13.1z" class="generic-view__close-icon"/></svg>
    </button>
    <h1 class="generic-view__title">Leaderboard</h1>
    <Tabs tabList={tabList} />
    <section id="yourScoresPanel" class="tabs__panel active-panel">
        <h2>Your Scores</h2>
        <LeaderboardScores />
    </section>
    <section id="globalScoresPanel" class="tabs__panel">
        <h2>Global Scores</h2>
    </section>
</section>